<% include partials/header %>
<div class="ui main text container segment" style="margin-top:7.0em;">
	<div class="ui huge header">
		<%= blog.title %>
	</div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= blog.image %>">
		</div>
		<div class="content">
			<span><%= blog.created.toDateString() %></span>
		</div>
		<div class="description">
			<p>
				<%- blog.body %>
			</p>
		</div>
		<span>
			
		</span>
		
	</div>
	<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="padding-top:2.5em;">
		<div class="ui large buttons" >
  			<button class="ui red basic button">Delete</button>
  			<div class="or"></div>
  			<a class="ui left attached blue basic button" href="/blogs/<%= blog._id %>/edit">Edit Post</a>
		</div>
	</form>
</div>

<% include partials/footer %>